---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro">
  <main class="min-h-screen bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
    <div class="text-center text-white p-8">
      <h1 class="text-6xl font-bold mb-4">
        Welcome to <span class="text-yellow-300">Astro</span>
      </h1>
      <p class="text-2xl mb-8">
        Built with TypeScript, Tailwind CSS, and modern tooling
      </p>
      <div class="flex gap-4 justify-center">
        <a 
          href="https://astro.build" 
          target="_blank"
          class="bg-white text-purple-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition"
        >
          Learn Astro
        </a>
        <a 
          href="https://tailwindcss.com" 
          target="_blank"
          class="bg-purple-700 text-white px-6 py-3 rounded-lg font-semibold hover:bg-purple-800 transition"
        >
          Tailwind Docs
        </a>
      </div>
    </div>
  </main>
</Layout>
